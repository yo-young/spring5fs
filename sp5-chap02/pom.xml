<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
		http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>sp5</groupId> <!-- 프로젝트를 생성하는 조직의 고유 아이디, 일반적으로 도메인 이름을 거꾸로 적는다. ex. com.naver -->
	<artifactId>sp5-chap02</artifactId> <!-- 프로젝트 빌드 시에 파일 대표이름, groupId 내에서 유일해야한다. -->
	<version>0.0.1-SNAPSHOT</version> <!-- 프로젝트 버전, 개발 중일 때는 SNAPSHOT을 접미사로 이용 -->

	<dependencies> <!-- 프로젝트와 의존 관계에 있는 라이브러리들을 관리 -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<version>5.0.2.RELEASE</version>
			<!-- spring-context-5.0.2.RELEASE.jar 파일을 추가한다는 의미 -->
		</dependency>
	</dependencies>

	<build> <!-- 빌드에 사용할 플러그인 목록 -->
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.7.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<encoding>utf-8</encoding>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>